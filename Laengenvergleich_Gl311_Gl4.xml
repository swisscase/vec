			<set vr="vr_tx_blue" table="txlist" id="Text_PB_Links_Laengenvergleich" set="bgblue" setint="false"/>
		</then>
		<else>
			<tx id="Text_PB_Links_Laengenvergleich" format="Zu Lang: @LokLaenge cm"/>
